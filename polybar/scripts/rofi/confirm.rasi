/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @black;
    text-color:             @white;
	font:				 	"Fantasque Sans Mono 10";
}

window {
    width:      			225px;
    padding:    			25px;
    border:					1px;
    border-radius:          8px;
    border-color:           @red;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@red;
}
